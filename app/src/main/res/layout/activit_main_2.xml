<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textColor="#000"
            android:textSize="20sp" />

    </LinearLayout>
    <ctrls.FloatMenuItem
        android:id="@+id/main002_fab_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mIconSize="Mini"
        app:mItemLabel="Ronaldo"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_002_ll_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusable="false"
                android:clickable="false"
                >

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/main002_menu_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/dark_blue_states"
                    app:backgroundTint="@color/color_dark_blue"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:tint="@android:color/white"
                    android:visibility="gone"
                    app:fabSize="mini"
                    />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/main002_menu_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/dark_blue_states"
                    app:backgroundTint="@color/color_dark_blue"
                    android:src="@drawable/ic_save_black_24dp"
                    android:tint="@android:color/white"
                    android:visibility="gone"
                    app:fabSize="mini" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/main002_menu_finaliza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/dark_blue_states"
                    app:backgroundTint="@color/color_dark_blue"
                    android:src="@drawable/ic_check_black_24dp"
                    android:tint="@android:color/white"
                    android:visibility="gone"
                    app:fabSize="mini" />

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/main002_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:backgroundTint="@color/dark_blue_states"
                app:backgroundTint="@color/color_dark_blue"
                android:src="@drawable/ic_add_black_24dp"
                android:tint="@android:color/white"
                app:fabSize="normal"
                app:useCompatPadding="true"
                android:visibility="gone"/>

            <ctrls.MyFabMenu
                android:id="@+id/main002_myfab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:backgroundTint="@color/dark_blue_states"
                app:backgroundTint="@color/color_dark_blue"
                android:src="@drawable/ic_add_black_24dp"
                android:tint="@android:color/white"
                app:fabSize="normal"
                app:useCompatPadding="true"  />

        </LinearLayout>

    </FrameLayout>
</LinearLayout>